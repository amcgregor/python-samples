   "source": [
    "from re import compile as re\n",
    "\n",
    "\n",
    "def urlsafe(text):\n",
    "\treturn urlsafe.regex.sub('_', text)\n",
    "\n",
    "urlsafe.regex = re('[^\\w_-]+')"
   ]
